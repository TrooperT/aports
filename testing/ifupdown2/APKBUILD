pkgname="ifupdown2"
#_pkgname=GvGen
pkgver="3.0.0_rc1"
_branch="python3"
pkgrel=0
pkgdesc="ifupdown2 is ifupdown re-written in Python."
url="https://github.com/CumulusNetworks/$pkgname"
options="!check"
arch="noarch"
license="GPLv2"
depends="iproute2 ethtool bridge-utils python3 py3-ipaddr py3-argcomplete py3-mako py3-gvgen"
makedepends="python3-dev py-setuptools"
install=""
subpackages=""
#subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/CumulusNetworks/$pkgname/archive/$_branch.zip"
builddir="$srcdir/$pkgname-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
